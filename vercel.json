{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/backend/server.js"
    },
    {
      "source": "/checkout/lumber-building",
      "destination": "/public/checkout/lumber-building/index.html"
    },
    {
      "source": "/checkout/lumber-building/",
      "destination": "/public/checkout/lumber-building/index.html"
    },
    {
      "source": "/checkout/success.html",
      "destination": "/public/checkout/success.html"
    },
    {
      "source": "/:path*",
      "destination": "/frontend/build/:path*"
    }
  ],
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/build",
  "installCommand": "cd frontend && npm install && cd ../backend && npm install"
}